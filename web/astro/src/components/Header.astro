---
const pathname = Astro.url.pathname;
const isActive = (path: string) => pathname === path || pathname === path + '/';
---

<header class="header">
  <div class="container">
    <div class="header-content">
      <a href="/" class="logo">FlowBiz</a>

      <div class="nav-wrapper">
        <input type="checkbox" id="nav-toggle" class="nav-toggle-checkbox" />
        <label for="nav-toggle" class="menu-toggle">เมนู</label>
        <nav class="nav">
          <a href="/" class={`nav-link ${isActive('/') ? 'active' : ''}`}>หน้าแรก</a>
          <a href="/building" class={`nav-link ${isActive('/building') ? 'active' : ''}`}>กำลังสร้าง</a>
          <a href="/services" class={`nav-link ${isActive('/services') ? 'active' : ''}`}>บริการ</a>
          <a href="/contact" class="btn btn-primary">ติดต่อเรา</a>
        </nav>
      </div>
    </div>
  </div>
</header>
